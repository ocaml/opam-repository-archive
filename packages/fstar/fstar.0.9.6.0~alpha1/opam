  [make "PREFIX=%{prefix}%" "-C" "src/ocaml-output" "install"]
]
remove: [
  [ "rm" "-rf"
      "%{prefix}%/lib/fstar"
      "%{prefix}%/doc/fstar"
      "%{prefix}%/etc/fstar"
      "%{prefix}%/bin/fstar.exe"
      "%{prefix}%/share/fstar" ]
  [ "ocamlfind" "remove" "fstarlib" ]
  [ "ocamlfind" "remove" "fstar-compiler-lib" ]
  [ "ocamlfind" "remove" "fstar-tactics-lib" ]
]

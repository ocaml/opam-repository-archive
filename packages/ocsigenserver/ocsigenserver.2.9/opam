  ("dbm" {<= "1.4"} | "sqlite3" {<= "5.2.0"} | "pgocaml" {<= "4.4.0"})
  "ipaddr" {>= "2.1" & <= "5.6.0"}
  "camlp4" {<= "5.3"}
]

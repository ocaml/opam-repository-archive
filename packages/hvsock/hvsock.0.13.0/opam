  "ocaml" {>= "4.02.3"}
  "base-bytes" {<= "base"}
  "lwt" {>= "2.4.7" & < "4.0.0"}
  "logs" {<= "0.7.0"}
  "fmt" {<= "0.9.0"}
  "base-unix" {= "base"}

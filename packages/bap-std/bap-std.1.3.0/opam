  "ocaml" {>= "4.02.3"}
  "base-unix" {= "base"}
  "bap-future" {= "1.3.0"}
  "camlzip" {>= "1.07" & <= "1.13"}
  "core_kernel" {>= "113.33.00" & < "v0.9"}
  "fileutils" {<= "0.6.6"}
  "graphlib" {<= "2.5.0"}
  "oasis" {build & = "0.4.7"}
  "ocamlfind" {>= "1.5.6" & < "2.0" & <= "1.9.6"}

  "uuidm" {<= "0.9.9"}
  "zarith" {<= "1.14"}
  "cmdliner" {<= "1.2"}
  "ogre" {<= "2.5.0"}
  "monads" {<= "2.5.0"}
  "conf-which" {build & = "1"}
  "conf-clang" {build & = "1"}
]
